{
    "compilerOptions": {
        "target": "ES2024",
        "module": "CommonJS",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "paths": {
            "vue-mvvm": ["./src/core/index.ts"],
            "@/*": ["./src/core/*", "./src/router/*", "./src/dialog/*", "./src/alert/*"],
            "@hook/*": ["./src/core/hooks/*", "./src/dialog/hooks/*"]
        }
    },
    "exclude": [
        "dist/**/*"
    ]
}